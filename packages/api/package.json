{
  "name": "@therootnetwork/api",
  "version": "1.0.2",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "peerDependencies": {
    "@polkadot/api": "^10.8.1",
    "@polkadot/types": "^10.8.1"
  },
  "scripts": {
    "_clean": "rm -rdf dist",
    "_tsup": "tsup",
    "dev": "run-s _clean \"_tsup src/index.ts --watch\"",
    "build": "run-s _clean \"_tsup src/index.ts --dts --sourcemap --minify\"",
    "lint": "dprint check && eslint . --ext .ts",
    "test": "jest -c ../../jest.config.js .*.test.ts",
    "test:watch": "jest -c ../../jest.config.js --watch --coverage"
  },
  "devDependencies": {
    "@polkadot/api": "^10.8.1",
    "@polkadot/types": "^10.8.1"
  }
}
