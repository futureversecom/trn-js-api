{
  "name": "@therootnetwork/api-types",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "peerDependencies": {
    "@polkadot/types": "^10.9.1"
  },
  "scripts": {
    "build": "run-s gen:defs gen:meta format",
    "lint": "dprint check && eslint . --ext .ts",
    "format": "dprint fmt --incremental",
    "gen:defs": "ts-node --skip-project node_modules/.bin/polkadot-types-from-defs --package @trnja/api --endpoint ./rootnet.json --input ./src/interfaces",
    "gen:meta": "ts-node --skip-project node_modules/.bin/polkadot-types-from-chain --package @trnja/api --endpoint ./rootnet.json --output ./src/interfaces --strict"
  },
  "devDependencies": {
    "@polkadot/typegen": "^10.9.1",
    "@polkadot/api-base": "^10.9.1",
    "@polkadot/rpc-core": "^10.9.1",
    "@polkadot/types-codec": "^10.9.1"
  },
  "compilerOptions": {
    "paths": {
      "@polkadot/api/augment": [
        "src/interfaces/augment-api.ts"
      ],
      "@polkadot/types/augment": [
        "src/interfaces/augment-types.ts"
      ]
    }
  }
}
