{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["ES2022.Error"],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@therootnetwork/api/*": ["./packages/api/src/*"],
      "@therootnetwork/evm/*": ["./packages/evm/src/*"],
      "@therootnetwork/api-types/*": ["./packages/api-types/src/*"]
    }
  },
  "exclude": ["dist/**/*", "**/dist/**/*"]
}
