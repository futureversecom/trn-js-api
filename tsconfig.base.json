{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@trnja/api/*": ["./packages/api/src/*"],
      "@trnja/evm/*": ["./packages/evm/src/*"],
      "@therootnetwork/api-types/*": ["./packages/api-types/src/*"]
    }
  },
  "exclude": [
    "dist/**/*",
    "**/dist/**/*"
  ]
}
