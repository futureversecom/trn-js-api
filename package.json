{
  "version": "1.0.0",
  "private": true,
  "bugs": "https://github.com/futureversecom/trn-js-api/issues",
  "engines": {
    "node": ">=16"
  },
  "homepage": "https://github.com/futureversecom/trn-js-api/#readme",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/futureversecom/trn-js-api.git"
  },
  "sideEffects": false,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "format": "prettier --config .prettierrc.js --write .",
    "build": "yarn build:interfaces; yarn workspaces run build",
    "build:interfaces": "ts-node -r tsconfig-paths/register packages/types/scripts/generateTypes.ts && ts-node -r tsconfig-paths/register packages/type-definitions/scripts/generate.ts",
    "build:release": "polkadot-ci-ghact-build",
    "clean": "polkadot-dev-clean-build",
    "lint": "polkadot-dev-run-lint",
    "postinstall": "polkadot-dev-yarn-only",
    "test": "jest -c ./jest/unit.config.js --coverage",
    "test:e2e": "jest -c ./jest/integration.config.js --bail  --forceExit --detectOpenHandles",
    "update-metadata": "ts-node --project ./tsconfig.json packages/types/scripts/updateMetadata.ts"
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/register": "^7.21.0",
    "@babel/runtime": "^7.21.5",
    "@polkadot/api": "^10.5.1",
    "@polkadot/dev": "^0.73.11",
    "@polkadot/typegen": "^10.5.1",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/jest": "^29.5.1",
    "jest": "^29.5.0",
    "jest-config": "^29.5.0",
    "jest-environment-node": "^29.5.0",
    "ts-node": "^10.9.1",
    "ts-jest": "^29.1.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  },
  "packageManager": "yarn@3.5.0",
  "versions": {
    "npm": "5.1.1-3",
    "git": "5.1.1-3"
  }
}
